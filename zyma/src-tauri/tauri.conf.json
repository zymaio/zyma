{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "zyma",
  "version": "0.9.5",
  "identifier": "com.zyma.editor",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5188",
    "beforeDevCommand": "npm run dev --prefix ../ui",
    "beforeBuildCommand": "npm run build --prefix ../ui"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "智码 (zyma)",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "visible": false,
        "backgroundColor": "#1e1e1e"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "cli": {
      "description": "Zyma Code Editor",
      "args": [
        {
          "name": "plugin-dir",
          "short": "p",
          "description": "Path to additional plugins directory",
          "takesValue": true,
          "multiple": true
        }
      ]
    },
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/fourthz/zyma/master/update.json",
        "https://gitee.com/fourthz/zyma/raw/master/update.json"
      ],
      "pubkey": "RWSCPE9e6boG5tDJdXp4z6ammNi10N3N/4wWFtw47ycHGOau9mpehihw"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
